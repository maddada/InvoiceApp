@*@model InvoiceApp.ViewModels.ReportViewModel*@
@model IEnumerable<InvoiceApp.Models.Invoice>

@{
    ViewBag.Title = "Invoices";
}

<h2 class="page-title top-margin">Invoices</h2>

@if (!Model.Any())
{
    <div class="text-center top-margin">
        <p>No Invoices to Display!</p>
        <a class="btn btn-info" href="@Url.Action("Create", "Invoices")"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add</a>
        @*@Html.ActionLink("Add", "Create", null, new { @ })*@
    </div>
}

@if (Model.Any())
{
    @*<label for="start-date">Start Date:</label>
    @Html.EditorFor(model => model., new { htmlAttributes = new { @class = "form-control" } })    
    
    <label for="end-date">End Date:</label>
    @Html.EditorFor(model => model., new { htmlAttributes = new { @class = "form-control" } })*@

    <table class="table table-responsive table-hover top-margin">
        <tr class="info">
            <th>
                #
            </th>
            <th>
                Date
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Method
            </th>
            <th>
                Amount
            </th>
            <th class="hide-on-print">
            </th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td class="action-table-cell hide-on-print text-right">
                    <a class="btn btn-info" title="Invoice Details" href="@Url.Action("Details", "Invoices", new {id = item.Id})"><i class="fa fa-file"></i></a>

                    <a class="btn btn-info" title="Edit" href="@Url.Action("Edit", "Invoices", new {id = item.Id})"><i class="fa fa-edit"></i></a>

                    <a class="btn btn-info" title="Delete" href="@Url.Action("Delete", "Invoices", new {id = item.Id})"><i class="fa fa-close"></i></a>

                </td>
            </tr>
        }

        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td class="action-table-cell hide-on-print">
                <a href="javascript:void(0);" onclick="window.print();" class="btn btn-default"><i class="fa fa-print"></i>&nbsp;&nbsp;Print</a>
            </td>
        </tr>
    </table>

}

